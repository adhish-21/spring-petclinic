pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/adhish-21/spring-petclinic.git'
            }
        }

        stage('Build') {
            steps {
                sh './mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh './mvn test'
            }
        }

        stage('Deploy') {
            steps {
                // Kill any existing instance of the application
                sh 'pkill -f "spring-petclinic-*.jar" || true'
                
                // Start the new instance in the background
                sh 'nohup java -jar target/spring-petclinic-*.jar &'
            }
        }
    }

    post {
        always {
            cleanWs()
        }

        success {
            echo 'Build succeeded!'
        }

        failure {
            echo 'Build failed!'
        }
    }
}


